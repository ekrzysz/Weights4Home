<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>pounds</th>
            <th>color</th>
        </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.product_id %></td>
            <td><%= recref.product_name %></td>
            <td><%= recref.brand %></td>
            <td><%= recref.pound %></td>
            <td><%= recref.color %></td>
            <td><a href='/weights/<%= recref.product_id %>/show'> Details</a></td>
            </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>
