<% if (allrecs.length > 0) {%>
    <% allrecs.forEach((recref, index) => { %>
    <product>
    <form action="/catalog/add" method="post" >
    <input type="hidden" name="product_id" value=<%= recref.product_id %> >
    <table>
    <tr><td><%= recref.product_id %></td><td><%= recref.product_name %></td></tr>
    <tr><td colspan="2"><%= recref.brand %></td></tr>
    <tr><td colspan="2"><%= recref.color %></td></tr>
    <tr><td><%= recref.des %></td> <td><%= recref.price %></td></tr>
    
    </tr>
    <tr>
    <td>Quantity: <input type="number" name="qty" required></td>
    <td><button type="submit">Add to Cart</button></td>
    </tr>
    </table>
    </form>
    </product>
    <% }); %>
    <% } %>